<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/pnhompenh"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

<!--    For item Categories1-->
    <androidx.cardview.widget.CardView
        android:id="@+id/Categories1"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="380dp"
        android:layout_height="180dp">

        <ImageView
            android:src="@drawable/toulsleng"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <!--    For item Categories2-->
    <androidx.cardview.widget.CardView
        android:id="@+id/Categories2"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="380dp"
        android:layout_height="180dp">

        <ImageView
            android:src="@drawable/royalpalace"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <!--    For item Categories3-->
    <androidx.cardview.widget.CardView
        android:id="@+id/Categories3"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="380dp"
        android:layout_height="180dp">

        <ImageView
            android:src="@drawable/watphnom"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <!--    For item Categories4-->
    <androidx.cardview.widget.CardView
        android:id="@+id/Categories4"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="380dp"
        android:layout_height="180dp">

        <ImageView
            android:src="@drawable/nationalmuseum"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>


</LinearLayout>