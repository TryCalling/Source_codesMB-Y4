<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeScreenActivity">

<!--    Layout of IMG Slider-->
    <LinearLayout
        android:id="@+id/imgSliderLayout"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="390dp"
        android:layout_height="210dp">


        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imageSlider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iss_corner_radius="25"
            app:iss_auto_cycle="true"
            app:iss_delay="1700"
            app:iss_period="1700"/>


    </LinearLayout>

    <!--    Text Tour Categories-->
    <LinearLayout
        android:id="@+id/tourCategoriesLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tourCategories"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/tour_categories"
            android:layout_marginStart="3sp"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!--    Layout CardView Item-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLayout1"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="390dp"
        android:layout_height="200dp">

        <ImageView
            android:src="@drawable/pnhompenh"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLayout2"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="390dp"
        android:layout_height="200dp">

        <ImageView
            android:src="@drawable/province"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>